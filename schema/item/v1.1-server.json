{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema/item/v1.1-server.json",
  "title": "Magic Item Schema v1.1 (Server Validation)",
  "description": "Permissive validation schema for magic item data integrity",
  "type": "object",
  "required": [
    "name",
    "description",
    "schema_version"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "1.1" },
    "name": { "type": "string", "minLength": 2 },
    "item_type": { "type": "string" },
    "item_subtype": { "type": "string" },
    "rarity": { "type": "string" },
    "attunement": { "type": "object" },
    "description": { "type": "string", "minLength": 20 },
    "appearance": { "type": "string" },
    "weight": { "type": "string" },
    "value": { "type": "string" },
    "properties": { "type": "array", "items": { "type": "object" } },
    "charges": { "type": "object" },
    "spells": { "type": "array", "items": { "type": "object" } },
    "weapon_properties": { "type": "object" },
    "armor_properties": { "type": "object" },
    "history": { "type": "string" },
    "creator": { "type": "string" },
    "previous_owners": { "type": "array", "items": { "type": "object" } },
    "quirks": { "type": "array", "items": { "type": "string" } },
    "curse": { "type": "object" },
    "sentience": { "type": "object" },
    "campaign_hooks": { "type": "array", "items": { "type": "string" } },
    "rule_base": { "type": "string" },
    "sources_used": { "type": "array", "items": { "type": "string" } },
    "assumptions": { "type": "array", "items": { "type": "string" } },
    "proposals": { "type": "array", "items": { "type": "object" } },
    "canon_update": { "type": "string" },
    "notes": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": true
}
