{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema/encounter/v1.json",
  "type": "object",
  "allOf": [{ "$ref": "../base/base.schema.json#/definitions/baseOutput" }],
  "required": [
    "title",
    "description",
    "characters",
    "NPCs",
    "monsters",
    "traps",
    "hazards",
    "treasure",
    "terrain",
    "objectives",
    "difficulty_tier",
    "expected_duration_rounds",
    "event_clock",
    "tactics",
    "sources_used",
    "assumptions",
    "fact_check_report",
    "schemaVersion"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3
    },
    "description": {
      "type": "string",
      "minLength": 50,
      "description": "Narrative description of the encounter"
    },
    "characters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "role", "level", "hit_points"],
        "properties": {
          "id": { "type": "string", "description": "Persistent identifier for the character" },
          "name": { "type": "string" },
          "role": { "type": "string", "description": "Narrative or tactical role in the encounter" },
          "level": { "type": "integer", "minimum": 1 },
          "class": { "type": "string" },
          "hit_points": { "type": "integer", "minimum": 1 },
          "conditions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "notes": { "type": "string" }
        }
      }
    },
    "NPCs": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["entity_id", "name", "affiliation"],
        "properties": {
          "entity_id": { "type": "string", "description": "Canon entity identifier" },
          "name": { "type": "string" },
          "affiliation": { "type": "string" },
          "motivation": { "type": "string" },
          "support": { "type": "string", "description": "How the NPC assists the party" },
          "stat_block": { "type": "string", "description": "Reference to stat block" }
        }
      }
    },
    "monsters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "count", "ac", "hp", "speed", "abilities"],
        "properties": {
          "name": { "type": "string" },
          "count": { "type": "integer", "minimum": 1 },
          "ac": { "type": "integer", "minimum": 5, "maximum": 30 },
          "hp": { "type": "integer", "minimum": 1 },
          "speed": { "type": "integer", "minimum": 0 },
          "abilities": {
            "type": "array",
            "items": { "type": "string" }
          },
          "legendary_actions": { "type": "integer", "minimum": 0, "maximum": 5 },
          "cr": { "type": "string" }
        }
      }
    },
    "traps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "trigger", "effect", "dc"],
        "properties": {
          "name": { "type": "string" },
          "trigger": { "type": "string" },
          "effect": { "type": "string" },
          "dc": { "type": "integer", "minimum": 0 },
          "disarm": { "type": "string" }
        }
      }
    },
    "hazards": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "impact"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "impact": { "type": "string", "description": "Mechanical impact or condition" },
          "mitigation": { "type": "string" }
        }
      }
    },
    "terrain": {
      "type": "object",
      "required": ["description", "features"],
      "properties": {
        "description": { "type": "string" },
        "features": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "effect"],
            "properties": {
              "name": { "type": "string" },
              "effect": { "type": "string" },
              "dc": { "type": "integer" },
              "cover": { "type": "string" },
              "movement": { "type": "string" }
            }
          }
        },
        "lighting": {
          "type": "string",
          "enum": ["bright", "dim", "dark", "magical-dark"]
        },
        "elevation": { "type": "string" },
        "weather": { "type": "string" }
      }
    },
    "objectives": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" },
      "description": "Win conditions and goals"
    },
    "difficulty_tier": {
      "type": "string",
      "enum": ["easy", "standard", "deadly", "boss"]
    },
    "expected_duration_rounds": {
      "type": "integer",
      "minimum": 1,
      "maximum": 20
    },
    "treasure": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["currency", "item", "boon", "information"] },
        "currency": {
          "type": "object",
          "properties": {
            "gp": { "type": "integer", "minimum": 0 },
            "sp": { "type": "integer", "minimum": 0 },
            "cp": { "type": "integer", "minimum": 0 }
          }
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "rarity": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "boons": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "event_clock": {
      "type": "object",
      "required": ["phases"],
      "properties": {
        "summary": { "type": "string" },
        "phases": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "trigger", "outcome"],
            "properties": {
              "name": { "type": "string" },
              "trigger": { "type": "string" },
              "outcome": { "type": "string" },
              "clock_segment": { "type": "integer", "minimum": 1 }
            }
          }
        }
      }
    },
    "tactics": {
      "oneOf": [
        {
          "type": "string",
          "description": "Narrative summary of tactical approach"
        },
        {
          "type": "object",
          "required": ["opening_moves", "fallback_plan"],
          "properties": {
            "opening_moves": { "type": "string" },
            "focus_targets": { "type": "string" },
            "resource_usage": { "type": "string" },
            "fallback_plan": { "type": "string" }
          }
        }
      ]
    },
    "sources_used": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "assumptions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "fact_check_report": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "enum": ["pending", "pass", "fail"] },
        "summary": { "type": "string" },
        "issues": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["description", "severity"],
            "properties": {
              "description": { "type": "string" },
              "severity": { "type": "string", "enum": ["minor", "major", "critical"] },
              "resolution": { "type": "string" }
            }
          }
        }
      }
    },
    "schemaVersion": {
      "type": "string",
      "pattern": "^encounter\\/v1$",
      "description": "Schema identifier for persisted encounters"
    }
  }
}
