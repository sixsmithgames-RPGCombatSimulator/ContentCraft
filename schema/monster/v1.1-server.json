{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema/monster/v1.1-server.json",
  "title": "Monster Schema v1.1 (Server Validation)",
  "description": "Permissive validation schema for monster data integrity",
  "type": "object",
  "required": [
    "name",
    "description",
    "schema_version"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "1.1" },
    "name": { "type": "string", "minLength": 2 },
    "description": { "type": "string" },
    "size": { "type": "string" },
    "creature_type": { "type": "string" },
    "subtype": { "type": "string" },
    "alignment": { "type": "string" },
    "challenge_rating": { "type": "string" },
    "experience_points": { "type": "integer" },
    "proficiency_bonus": { "type": "integer" },
    "ability_scores": { "type": "object" },
    "armor_class": {},
    "hit_points": {},
    "hit_dice": { "type": "string" },
    "speed": { "type": "object" },
    "saving_throws": { "type": "array" },
    "skill_proficiencies": { "type": "array" },
    "damage_vulnerabilities": { "type": "array" },
    "damage_resistances": { "type": "array" },
    "damage_immunities": { "type": "array" },
    "condition_immunities": { "type": "array" },
    "senses": { "type": "array" },
    "passive_perception": { "type": "integer" },
    "languages": { "type": "array" },
    "abilities": { "type": "array" },
    "actions": { "type": "array" },
    "bonus_actions": { "type": "array" },
    "reactions": { "type": "array" },
    "multiattack": { "type": "string" },
    "spellcasting": { "type": "object" },
    "legendary_actions": { "type": "object" },
    "mythic_actions": { "type": "object" },
    "lair_actions": { "type": "array" },
    "regional_effects": { "type": "array" },
    "location": { "type": "string" },
    "ecology": { "type": "string" },
    "lore": { "type": "string" },
    "tactics": { "type": "string" },
    "rule_base": { "type": "string" },
    "sources_used": { "type": "array" },
    "assumptions": { "type": "array" },
    "proposals": { "type": "array" },
    "canon_update": { "type": "string" },
    "notes": { "type": "array" },
    "sources": { "type": "array" }
  },
  "additionalProperties": true
}
