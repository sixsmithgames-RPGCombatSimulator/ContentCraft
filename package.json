{
  "name": "contentcraft",
  "version": "1.0.0",
  "description": "An iterative content creation app for fiction, non-fiction, D&D adventures, and fact-checked articles",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch --env-file=.env src/server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client && npm run copy:client",
    "build:server": "tsc -p tsconfig.server.json && node --input-type=module -e \"import { mkdirSync, cpSync } from 'node:fs'; mkdirSync('dist/server', { recursive: true }); cpSync('src/server/schemas', 'dist/server/schemas', { recursive: true });\"",
    "build:client": "cd client && npm run build",
    "copy:client": "node --input-type=module -e \"import { cpSync, existsSync, rmSync } from 'node:fs'; if (existsSync('dist/client')) { rmSync('dist/client', { recursive: true }); } cpSync('client/dist', 'dist/client', { recursive: true });\"",
    "postinstall": "cd client && npm install",
    "start": "node dist/server/index.js",
    "generate:types": "tsx scripts/generateTypes.ts",
    "generate:encounter-types": "tsx scripts/generate-encounter-types.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "content",
    "writing",
    "ai",
    "fact-checking",
    "dnd",
    "publishing"
  ],
  "author": "Sixsmith Games",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/pdf-parse": "^1.1.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "marked": "^11.1.1",
    "mongodb": "^6.20.0",
    "multer": "^2.0.2",
    "nanoid": "^5.1.6",
    "openai": "^6.3.0",
    "pdf-parse": "^2.4.5",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "json-schema-to-typescript": "^15.0.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
