# Environment Variables for ContentCraft
#
# Â© 2025 Sixsmith Games. All rights reserved.
#
# Copy this file to .env and fill in your values

# ============================================================================
# Server Configuration
# ============================================================================
PORT=3001
APP_PORT=3000
NODE_ENV=development

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite (for local development)
DATABASE_PATH=./data/contentcraft.db

# MongoDB (for production/Docker)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme_secure_password
MONGO_DATABASE=dndgen
MONGO_PORT=27017
MONGO_URI=mongodb://admin:changeme_secure_password@localhost:27017/dndgen?authSource=admin

# ============================================================================
# AI Service API Keys
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Optional: Other AI providers
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# ============================================================================
# Security
# ============================================================================
# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# Session secret - MUST be changed in production
SESSION_SECRET=your-super-secret-session-key-change-this

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGIN=http://localhost:5173

# ============================================================================
# Content Limits
# ============================================================================
MAX_CONTENT_LENGTH=100000

# ============================================================================
# Development Settings (only for development mode)
# ============================================================================
# Uncomment for development
# NODE_ENV=development
# CLIENT_PORT=5173